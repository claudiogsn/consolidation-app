<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Template</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <div class="container mx-auto mt-8">
        <h1 class="text-2xl font-bold mb-4">Consulta de Documentos</h1>
        <form id="consultaForm" class="flex flex-col space-y-4">
            <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
                <div class="flex-1">
                    <label for="estabelecimento" class="block text-sm font-medium text-gray-700">ID do Estabelecimento</label>
                    <input type="text" id="estabelecimento" name="estabelecimento" required
                        class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                </div>
                <div class="flex-1">
                    <label for="data_mov" class="block text-sm font-medium text-gray-700">Data</label>
                    <input type="date" id="data_mov" name="data_mov" required
                        class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                </div>
            </div>
            <button type="submit"
                class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Consultar
            </button>
        </form>

        <div id="loader" class="hidden mt-4">
            <div class="animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-indigo-500"></div>
            <span class="ml-2 text-indigo-500">Processando...</span>
        </div>

        <div id="result" class="hidden mt-4">
            <div id="alert" class="hidden bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"></div>
            <table id="dataTable"
                class="hidden min-w-full divide-y divide-gray-200 shadow overflow-hidden border-b border-gray-200 sm:rounded-lg mt-4">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Número de Controle
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Código do Documento
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Soma NFCE Pagamento
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Soma NFCE Itens
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Soma Pagamento Conta
                        </th>
                        <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Soma Detalhe Conta
                        </th>
                    </tr>
                </thead>
                <tbody id="dataBody">
                </tbody>
            </table>
            <p id="noDivergencias" class="hidden mt-4 text-red-500">Não foram encontradas divergências para a data e
                estabelecimento informados.</p>
        </div>
    </div>

    <script>
        const form = document.getElementById('consultaForm');
        const loader = document.getElementById('loader');
        const resultDiv = document.getElementById('result');
        const alertDiv = document.getElementById('alert');
        const dataTable = document.getElementById('dataTable');
        const dataBody = document.getElementById('dataBody');
        const noDivergencias = document.getElementById('noDivergencias');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            loader.classList.remove('hidden');
            const estabelecimento = document.getElementById('estabelecimento').value;
            const data_mov = document.getElementById('data_mov').value;

            try {
                const response = await fetch(`http://localhost/api/getDocs.php?estabelecimento=${estabelecimento}&dt_mov=${data_mov}`);
                if (!response.ok) {
                    throw new Error('Erro ao consultar documentos');
                }
                const responseData = await response.json();
                alertDiv.textContent = responseData.message;
                alertDiv.classList.remove('hidden');

                if (responseData.data.length > 0) {
                    const data = responseData.data[0];
                    const newRow = `<tr>
                        <td class="px-6 py-4 whitespace-nowrap">${data.num_controle}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${data.cod_doc}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${data.sum_nfce_pag}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${data.sum_nfce_itens}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${data.sum_pagconta}</td>
                        <td class="px-6 py-4 whitespace-nowrap">${data.sum_detconta}</td>
                    </tr>`;
                    dataBody.innerHTML = newRow;
                    dataTable.classList.remove('hidden');
                } else {
                    noDivergencias.classList.remove('hidden');
                }
            } catch (error) {
                console.error(error);
                alert('Erro ao consultar documentos');
            } finally {
                loader.classList.add('hidden');
                resultDiv.classList.remove('hidden');
            }
        });
    </script>
</body>

</html>
